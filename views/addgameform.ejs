<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <%- include("partials/errors.ejs") %>
    <form method="post" action="/addGame"> 
    <label for="nameInput">Name</label>
    <input type="text" name="nameInput">
    <label for="categoryInput">Genre</label>
    <select name="categoryInput" id="options" style="width: 200px;">
    <%categories.forEach(category =>{%>
        <option value="<%= category.category%>"><%= category.category%></option>
    <%})%>
    </select>
    <label for="bioInput">Bio</label>
    <input type="text" name="bioInput">
    <label for="priceInput">Price</label>
    <input type="text" name="priceInput">
    <label for="stockInput">Stock</label>
    <input type="text" name="stockInput">
    <label for="developerInput">Developer</label>
    <input type="text" name="developerInput">
    <button type="submit">submit</button>
    </form>
</body>
</body>
</html>